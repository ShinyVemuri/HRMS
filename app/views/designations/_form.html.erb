
<%= form_with model: @designation do |f| %>
    <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
    <div class="field">
        <%= f.label :description %><br />
        <%= f.text_field :description, autofocus: true, autocomplete: "description" %>
    </div><br>
    <div class="actions admin-add-cancel-buttons-container">
    <%= f.submit "Save", class: "btn btn-primary" %>
    <%= link_to "Cancel", designations_path, class: "btn btn-danger" %>
    </div>
<% end %>