
<div class="d-flex flex-row ">
    <%= render 'layouts/dash'%>
    <div class="d-flex flex-column">
        <div class="h1">
            <div class="box3">
            <br>
                <div class="c3">
                <h1>21</h1>
                <br>
                <p>Total Leaves</p>
                </div>
            </div>
            <br>
            <div class="box3">
            <br>
                <div class="c3">
                <h1>5</h1>
                <p>Applied Leaves</p>
                </div>
            </div>
            <div class="box3">
            <br>
                <div class="c3">
                <h1>16</h1>
                <p>Available Leaves</p>
                </div>
            </div>
        </div>
        <br>
        <div class="box2">
            <div class="c4">
                <div>
                    <h3>Apply leave</h3>
                    <%= form_with model: @employee_leaves do |f| %>
                        <div class="h1">
                            <div class="s1">
                                <div class="field">
                                    <%= f.label :leave_id %><br />
                                    <%= f.number_field :leave_id, autofocus: true, autocomplete: "leave-id" %>
                                </div>

                                <div class="field">
                                    <%= f.label :employee_id %><br />
                                    <%= f.number_field :employee_id, autofocus: true, autocomplete: "employee-id" %>
                                </div>

                                <div class="field">
                                    <%= f.label :start_date %><br />
                                    <%= f.date_field :start_date, autofocus: true, autocomplete: "start-date" %>
                                </div>

                                <div class="field">
                                    <%= f.label :end_date %><br />
                                    <%= f.date_field :end_date, autofocus: true, autocomplete: "end-date" %>
                                </div>
                            </div><br>
                            <div class="e">
                            <br>
                                <div class="s2">
                                <div class="field">
                                    <%= f.label :status %><br />
                                    <%= f.text_field :status, autofocus: true, autocomplete: "status" %>
                                </div><br>

                                <div class="field">
                                    <%= f.label :corfirmed_by %><br />
                                    <%= f.number_field :corfirmed_by, autofocus: true, autocomplete: "corfirmed-by" %>
                                </div><br>

                                <div class="field">
                                    <%= f.label :reason %><br />
                                    <%= f.text_field :reason, autofocus: true, autocomplete: "reason" %>
                                </div><br />
                                <div class="actions">
                                    <div class="lo"><%= f.submit "Add" %></div>
                                </div>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

