<div class="d-flex flex-row ">
    <%= render 'layouts/dash'%>
    <div class="d-flex flex-column">
       <div class="h1"> 
        <div class="set">
        <center>
        <div class="head"><h1>Employee Details</h1></div>
        </center>
        <% @employee_details.each do |employeedetail| %>
            <div class="f-container">
                <div>
                    <p>Contact No: <%=  employeedetail.contact_no %></p>
                    <p>Emergency Contact Number: <%= employeedetail.emergency_contact_number %></p>
                    <p>Designation Id: <%= employeedetail.designation_id %></p>
                    <p>Employee Id: <%= employeedetail.employee_id %></p>
                    <p>Manager Id: <%= employeedetail.manager_id %></p>
                    <p>Blood Group: <%= employeedetail.blood_group %></p>
                    <p>Project Id: <%= employeedetail.project_id %></p>
                    <p>Work Experience: <%= employeedetail.work_experience %></p>

                    <%= link_to  edit_employee_detail_path(employeedetail), class: "btn", data: { turbo_frame: "remote_modal" } do %> 
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                        <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
                        </svg>
                    <% end %>
                    <%= button_to employee_detail_path(employeedetail), class: "btn", method: :delete do %>
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                        </svg>
                    <% end %>

                </div>
            </div>
        <% end %>
        </div><br>

        <div class="set">
        <center>
        <h1>Address Details</h1>
        </center>
        <% Address.all.each do |address| %>
            <div class="f-container">
                <div>
                    <p>Address : <%=  address.address %></p>
                    <p>Street : <%= address.street %></p>
                    <p>City : <%= address.city %></p>
                    <p>State : <%= address.state %></p>
                    <p>Pincode : <%= address.pincode %></p>
                    <p>Country : <%= address.country %></p>
                    <p>Employee Id : <%= address.employee_id %></p>
                    

                    <%= link_to edit_address_path(address), class: "btn", data: { turbo_frame: "remote_modal" } do %> 
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                        <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
                        </svg>
                    <% end %>
                    <%= button_to address_path(address), class: "btn", method: :delete do %>
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                        </svg>
                    <% end %>

                </div>
            </div>
        <% end %>
        </div>
        </div>
    </div>
</div>
